<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{
        if (Request.IsAuthenticated)
        {
            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <div class="row">
                        <div class="navbar-header">
                            <a href="#" class="navbar-brand img-rounded"><img alt="Brand" src="~/Images/logo-orig-silver.png" /></a>
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="glyphicon glyphicon-menu-hamburger"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Upcoming Events", "Index", "Events")</li>
                                <li>@Html.ActionLink("Menus", "Index", "Menus")</li>
                                <li>@Html.ActionLink("Timelines", "Index", "Timelines")</li>
                                <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                                <li>@Html.ActionLink("Ratings", "Index", "Ratings")</li>
                                <li>@Html.ActionLink("Staff", "Index", "Staff")</li>
                                <li>@Html.ActionLink("Settings", "Index", "Manage")</li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    <div class="container body-content">
        @RenderBody()
        <div class="row">
            <div class="">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
